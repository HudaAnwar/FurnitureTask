<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="true"
    android:layoutDirection="rtl"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".presentation.ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/search_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:hint="@string/furniture_search"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:endIconDrawable="@drawable/filter"
                app:endIconMode="custom"
                app:startIconDrawable="@drawable/search">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/tajawal_light"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:adjustViewBounds="true"
                android:contentDescription="@string/camera"
                android:padding="5dp"
                android:src="@drawable/small_cam"
                app:tint="@color/black" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:adjustViewBounds="true"
                android:contentDescription="@string/gift"
                android:padding="5dp"
                android:src="@drawable/gift" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/discoverFurniture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:layout_weight="1.35"
                android:fontFamily="@font/tajawal_bold"
                android:text="@string/discover_best_furniture"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/view_more_categories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.65"
                android:text="@string/view_more"
                android:textAlignment="textEnd"
                android:textColor="@color/light_grey"
                app:drawableEndCompat="@drawable/ic_view_more"
                app:drawableTint="@color/light_grey" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.35"
                android:drawablePadding="10dp"
                android:fontFamily="@font/tajawal_bold"
                android:text="@string/offers"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/offers" />

            <TextView
                android:id="@+id/view_more_offers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.65"
                android:text="@string/view_more"
                android:textAlignment="textEnd"
                android:textColor="@color/light_grey"
                app:drawableEndCompat="@drawable/ic_view_more"
                app:drawableTint="@color/light_grey" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/offers_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry">

                <ImageView
                    android:id="@+id/chair_img_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:adjustViewBounds="true"
                    android:paddingStart="10dp"
                    android:paddingBottom="10dp"
                    android:src="@drawable/chair_img" />

                <TextView
                    android:id="@+id/offer_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toStartOf="@id/chair_img_offer"
                    android:fontFamily="@font/tajawal_bold"
                    android:text="@string/modern_living_room"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/sofa_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/offer_txt"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="4dp"
                    android:drawablePadding="6dp"
                    android:text="2 كنبة"
                    android:textColor="@color/dark_grey"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/colored_sofa" />

                <TextView
                    android:id="@+id/chair_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sofa_offer"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="4dp"
                    android:drawablePadding="6dp"
                    android:text="2 كرسي"
                    android:textColor="@color/dark_grey"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/colored_chair" />

                <TextView
                    android:id="@+id/table_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/chair_offer"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="4dp"
                    android:drawablePadding="6dp"
                    android:text="طاولة"
                    android:textColor="@color/dark_grey"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/small_table" />

                <TextView
                    android:id="@+id/gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/table_offer"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="4dp"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/tajawal_medium"
                    android:gravity="center"
                    android:text="آرت هاوس"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/art_house_small_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/gallery"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/tajawal_medium"
                        android:text="@string/offer_price"
                        android:textColor="@color/dark_grey" />

                    <TextView
                        android:id="@+id/offer_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/tajawal_bold"
                        android:text="200 جنيه"
                        android:textColor="@color/light_slate_grey"
                        android:textStyle="bold" />
                </LinearLayout>

            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/offers_container"
                android:layout_alignEnd="@id/offers_container"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-32dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/light_slate_grey"
                android:fontFamily="@font/tajawal_bold"
                android:text="أطلب الأن"
                app:cornerRadius="25dp"
                app:icon="@drawable/cart"
                app:iconTintMode="multiply" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.35"
                android:drawablePadding="10dp"
                android:fontFamily="@font/tajawal_bold"
                android:text="وفر حتى % 50"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/sales" />

            <TextView
                android:id="@+id/view_more_sales"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.65"
                android:text="@string/view_more"
                android:textAlignment="textEnd"
                android:textColor="@color/light_grey"
                app:drawableEndCompat="@drawable/ic_view_more"
                app:drawableTint="@color/light_grey" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/sales_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/furniture_img"
                android:background="@drawable/rounded_rectangle"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/timer_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sales_gallery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/tajawal_bold"
                        android:gravity="center_vertical"
                        android:text="آرت هاوس"
                        android:textColor="@color/black"
                        app:drawableStartCompat="@drawable/art_house_small_icon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/seconds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="4dp"
                            android:background="@drawable/rounded_rectangle"
                            android:elevation="15dp"
                            android:padding="8dp"
                            android:text="50"
                            android:textAlignment="center"
                            android:textColor="@color/dark_grey" />

                        <TextView
                            android:id="@+id/minutes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="4dp"
                            android:background="@drawable/rounded_rectangle"
                            android:elevation="15dp"
                            android:padding="8dp"
                            android:text="24"
                            android:textAlignment="center"
                            android:textColor="@color/dark_grey" />

                        <TextView
                            android:id="@+id/hours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="4dp"
                            android:background="@drawable/rounded_rectangle"
                            android:elevation="15dp"
                            android:padding="8dp"
                            android:text="06"
                            android:textAlignment="center"
                            android:textColor="@color/dark_grey" />

                        <TextView
                            android:id="@+id/days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/rounded_rectangle"
                            android:elevation="15dp"
                            android:padding="8dp"
                            android:text="33"
                            android:textAlignment="center"
                            android:textColor="@color/dark_grey" />
                    </LinearLayout>

                </LinearLayout>


                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/timer_container"
                    android:layout_marginVertical="10dp"
                    android:background="@color/dark_grey" />

                <TextView
                    android:id="@+id/sales_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/tajawal_bold"
                    android:text="@string/modern_living_room"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/sales_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sales_txt"
                    android:layout_marginVertical="10dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/sofa_sales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="6dp"
                        android:text="2 كنبة"
                        android:textColor="@color/dark_grey"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/colored_sofa" />

                    <TextView
                        android:id="@+id/chair_sales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="6dp"
                        android:text="2 كرسي"
                        android:textColor="@color/dark_grey"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/colored_chair" />

                    <TextView
                        android:id="@+id/table_sales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="6dp"
                        android:text="طاولة"
                        android:textColor="@color/dark_grey"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/small_table" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/price_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sales_items"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/tajawal_medium"
                        android:text="@string/offer_price"
                        android:textColor="@color/dark_grey"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/sales_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/tajawal_bold"
                        android:text="200 جنيه"
                        android:textColor="@color/light_slate_grey"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/price_container"
                    android:backgroundTint="@color/light_slate_grey"
                    android:fontFamily="@font/tajawal_bold"
                    android:text="أطلب الأن"
                    app:cornerRadius="10dp"
                    app:icon="@drawable/cart"
                    app:iconGravity="textStart"
                    app:iconTintMode="multiply" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/furniture_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/sales_container"
                android:layout_marginStart="90dp"
                android:layout_marginBottom="-90dp"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:src="@drawable/chair_img" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.35"
                android:drawablePadding="10dp"
                android:fontFamily="@font/tajawal_bold"
                android:gravity="center_vertical"
                android:text="الخصومات"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/discount" />

            <TextView
                android:id="@+id/view_more_discounts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.65"
                android:text="@string/view_more"
                android:textAlignment="textEnd"
                android:textColor="@color/light_grey"
                app:drawableEndCompat="@drawable/ic_view_more"
                app:drawableTint="@color/light_grey" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <RelativeLayout
                android:id="@+id/discount_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"
                android:paddingStart="10dp"
                android:paddingBottom="20dp"
                tools:ignore="RtlSymmetry">

                <ImageView
                    android:id="@+id/chair_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/chair_img"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/discount_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toStartOf="@id/chair_img"
                    android:fontFamily="@font/tajawal_bold"
                    android:text="@string/modern_living_room"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/discount_item_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/discount_txt"
                    android:layout_alignStart="@+id/discount_txt"
                    android:layout_marginBottom="4dp"
                    android:layout_toStartOf="@id/chair_img"
                    android:text="أنتريه يتكون من 6 قطع بأفضل أنواع الخشب وأحدث التصميمات والأقمشة"
                    android:textColor="@color/dark_grey"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/discount_gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/discount_item_description"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/tajawal_medium"
                    android:gravity="center"
                    android:text="آرت هاوس"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/art_house_small_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/discount_gallery"
                    android:layout_alignParentStart="true"
                    android:layout_marginVertical="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/discount_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/tajawal_bold"
                        android:gravity="center_vertical"
                        android:text="30%"
                        android:textColor="@color/light_red"
                        app:drawableStartCompat="@drawable/discount_tag" />

                    <TextView
                        android:id="@+id/discount_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:fontFamily="@font/tajawal_bold"
                        android:text="41.99 جنيه"
                        android:textColor="@color/light_slate_grey"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/discount_price7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/diagonal_line"
                        android:fontFamily="@font/tajawal_bold"
                        android:text="41.99 جنيه"
                        android:textColor="@color/light_slate_grey"
                        android:textStyle="bold" />
                </LinearLayout>

            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/discount_container"
                android:layout_alignEnd="@id/discount_container"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-32dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/light_slate_grey"
                android:fontFamily="@font/tajawal_bold"
                android:text="أطلب الأن"
                app:cornerRadius="25dp"
                app:icon="@drawable/cart"
                app:iconTintMode="multiply" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:weightSum="2">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/furniture_gallary" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/light_gallary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.35"
                android:drawablePadding="10dp"
                android:fontFamily="@font/tajawal_bold"
                android:gravity="center_vertical"
                android:text="معارض بالقرب منك"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/nearby_gallaries" />

            <TextView
                android:id="@+id/view_more_nearby_gallaries"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.65"
                android:text="@string/view_more"
                android:textAlignment="textEnd"
                android:textColor="@color/light_grey"
                app:drawableEndCompat="@drawable/ic_view_more"
                app:drawableTint="@color/light_grey" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/gallery_img1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="5dp"
