<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FurnitureTask" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FurnitureTask.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TitleTextAppearance">
        <item name="font">@font/tajawal_bold</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/light_grey</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>
    <!--    <style name="Theme.FurnitureTask.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->
    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/tajawal_medium</item>
    </style>
    <style name="Theme.FurnitureTask.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="labelStyleDarkGray500">
        <item name="android:textColor">@color/color_gray_5</item>
        <item name="android:textSize">@dimen/label_fontSize</item>
        <item name="android:fontFamily">@font/tajawal_medium</item>
    </style>

    <style name="headerMediumStyleDarkGray">
    <item name="android:textColor">@color/color_gray_5</item>
    <item name="android:textSize">@dimen/header_medium_fontSize</item>
    <item name="android:fontFamily">@font/tajawal_bold</item>
    </style>

    <dimen name="header_medium_fontSize">18sp</dimen>
</resources>